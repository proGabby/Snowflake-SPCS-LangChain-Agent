# =============================================================================
# Snowflake SPCS LangChain Agent - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit the actual .env file to version control

# =============================================================================
# SNOWFLAKE CONFIGURATION
# =============================================================================
# Replace these with your actual Snowflake credentials
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_WAREHOUSE=your-warehouse
SNOWFLAKE_DATABASE=your-database
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=PUBLIC

# =============================================================================
# SNOWFLAKE SECURITY & PERFORMANCE SETTINGS
# =============================================================================
# Maximum number of rows returned by queries (security boundary)
SNOWFLAKE_MAX_QUERY_ROWS=10000

# Maximum query execution timeout in seconds
SNOWFLAKE_MAX_TIMEOUT=300

# Comma-separated list of allowed tables (empty = all tables allowed)
# Example: SNOWFLAKE_ALLOWED_TABLES=sales,customers,products,orders
SNOWFLAKE_ALLOWED_TABLES=

# Comma-separated list of blocked SQL operations (security boundary)
SNOWFLAKE_BLOCKED_OPERATIONS=DROP,DELETE,UPDATE,INSERT,CREATE,ALTER,TRUNCATE

# =============================================================================
# VLLM CONFIGURATION (SPCS Service)
# =============================================================================
# vLLM service endpoint
VLLM_BASE_URL=http://localhost:8001

# Model name to use for LLM inference
VLLM_MODEL_NAME=microsoft/DialoGPT-small

# Maximum tokens to generate per request
VLLM_MAX_TOKENS=1000

# Temperature for response generation (0.0 = deterministic, 1.0 = creative)
VLLM_TEMPERATURE=0.7

# Request timeout in seconds
VLLM_TIMEOUT=30

# Enable/disable vLLM integration
VLLM_ENABLED=true

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Secret key for JWT token generation (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# JWT algorithm
AUTH_ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# RATE LIMITING
# =============================================================================
# Maximum requests per window
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds (3600 = 1 hour)
RATE_LIMIT_WINDOW=3600

# =============================================================================
# CORS SETTINGS (For Ingress Security)
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Comma-separated list of allowed HTTP methods
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# =============================================================================
# GRAFANA MONITORING CONFIGURATION
# =============================================================================
# Grafana server URL
GRAFANA_BASE_URL=http://localhost:3000

# Grafana API key for dashboard management
GRAFANA_API_KEY=your-grafana-api-key

# Dashboard ID for the Snowflake agent dashboard
GRAFANA_DASHBOARD_ID=1

# Prometheus datasource name in Grafana
GRAFANA_DATASOURCE=prometheus

# Enable/disable Grafana integration
GRAFANA_ENABLED=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Debug mode (set to false in production)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum conversation history to keep in memory
MAX_CONVERSATION_HISTORY=10

# Agent timeout in seconds
AGENT_TIMEOUT=60

# Metrics server port
METRICS_PORT=8001

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# DOCKER COMPOSE OVERRIDES (Optional)
# =============================================================================
# Override default values for Docker Compose
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=admin
